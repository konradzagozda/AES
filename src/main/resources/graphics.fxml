<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane alignment="center" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller">
   <columnConstraints>
      <ColumnConstraints />
      <ColumnConstraints />
      <ColumnConstraints />
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
   </rowConstraints>
   <children>
      <TextArea fx:id="rawDataField"  prefHeight="200.0" prefWidth="200.0" wrapText="true" GridPane.rowIndex="5" />
      <TextArea fx:id="encryptedDataField" editable="false" prefHeight="200.0" prefWidth="181.0" wrapText="true" GridPane.columnIndex="2" GridPane.rowIndex="7" />
      <TextArea fx:id="decipheredDataField" editable="false" prefHeight="200.0" prefWidth="200.0" wrapText="true" GridPane.columnIndex="3" GridPane.rowIndex="5" />
      <Label text="Raw data" GridPane.rowIndex="6" />
      <Label text="Encrypted data as bytes" GridPane.columnIndex="2" GridPane.rowIndex="8" />
      <Label text="Deciphered data" GridPane.columnIndex="3" GridPane.rowIndex="6" />
      <Button fx:id="encryptButton" disable="true" mnemonicParsing="false" onAction="#encryptText" text="Encrypt" GridPane.rowIndex="10" />
      <Button fx:id="decryptButton" disable="true" mnemonicParsing="false" onAction="#decryptText" text="Decrypt" GridPane.columnIndex="3" GridPane.rowIndex="10" />
      <TextField fx:id="keyTextField" prefHeight="26.0" prefWidth="212.0" promptText="04FF04FF04FF04FF04FF04FF04FF04FF" GridPane.columnSpan="2" GridPane.rowIndex="1" />
      <Label text="Enter key in hexadecimal format" />
      <Button fx:id="randomKeyButton" mnemonicParsing="false" onAction="#generateRandomKey" text="generate random key" GridPane.columnIndex="2" />
      <Button fx:id="applyKeyButton" disable="true" mnemonicParsing="false" onAction="#createAESInstance" text="apply key" GridPane.columnIndex="2" GridPane.rowIndex="1" />
      <Button fx:id="getDataFromFileButton" mnemonicParsing="false" onAction="#getDataFromFile" text="Get data from file" GridPane.rowIndex="11" />
      <Button fx:id="saveToFileButton" mnemonicParsing="false" onAction="#saveToFile" text="Save to file" GridPane.columnIndex="3" GridPane.rowIndex="11" />
      <TextArea fx:id="rawDataAsBytesArea" editable="false" prefHeight="200.0" prefWidth="200.0" wrapText="true" GridPane.rowIndex="7" />
      <Label text="Raw data as bytes" GridPane.rowIndex="8" />
      <TextArea fx:id="decipheredAsBytesField" editable="false" wrapText="true" prefHeight="200.0" prefWidth="200.0" GridPane.columnIndex="3" GridPane.rowIndex="7" />
      <Label text="Deciphered data as bytes" GridPane.columnIndex="3" GridPane.rowIndex="8" />
   </children>
   <opaqueInsets>
      <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
   </opaqueInsets>
</GridPane>
